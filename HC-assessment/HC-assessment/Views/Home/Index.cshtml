@model IEnumerable<HC_assessment.Models.Person>
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2 style="text-align:center; margin-top:5px"><strong>Health Catalyst Assessment</strong></h2>
    <h2 style="text-align:center; margin-bottom:5px"> People Search</h2>
</div>
<div id="form">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {

        <label style="display:inline-block;margin-right:10px;">Enter name</label>
        
        @Html.TextBox("input")
        <input id="search" type="submit" value="Search" style="margin-left:25px;margin-bottom:15px" />
        <label style="display:inline-block;margin-left:50px;">Add new </label>
        <div id="add">@Html.ActionLink("People", "Index", "People")</div>
    }
</div>
<table class="table table-striped">
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red;font-size:15px">Person Not Found</td>
            </tr>
        }
        else
        {
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Age</th>
                <th>Address</th>
                <th>Interests</th>
            </tr>
        </thead>
        foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.Address</td>
                <td>@item.Interests</td>
            </tr>
        }
    }
</table>


